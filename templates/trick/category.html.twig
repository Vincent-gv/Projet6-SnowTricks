{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - All {{ category.name }} Tricks{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <span class="h6 d-inline-block mb-4 subhead text-uppercase">Category tricks</span>
                    <h1 class="text-uppercase text-white mb-5">{{ category.name }} <span class="text-color">Tricks</span>
                    </h1>
                </div>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="row">
                {% if tricks %}
                {% for trick in tricks|reverse %}
                <div class="col-lg-3 col-md-6">
                    <div class="card border-0 rounded-0 p-0 mb-5 mb-lg-4 shadow-sm">
                        <h6 class="card-label"><span class="category badge badge-dark">{{ trick.category.name }}</span></h6>
                        <p class="btn-edit mb-2">
                            <a href="{{ path('trick_edit', {'id': trick.id}) }}" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                            {{ include('trick/_delete_form_btn.html.twig') }}
                        {% if trick.images is defined %}
                        {% for image in trick.images %}
                            {% if loop.first %}
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}"><img src="{{ asset('images/gallery/' ~ image.filename) }}" alt="" class="img-fluid"></a>
                            {% endif %}
                        {% endfor %}
                        {% endif %}
                        <div class="card-body">
                                    <a href="{{ path('trick_show', {'slug': trick.slug}) }}"><h5 class="card-title text-black mb-0">{{ trick.title }}</h5></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
                {% endif %}
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="mt-5 text-center">
                        <a href="#" class="btn btn-main">Load more
                            <span style="font-size: 15px;margin-left: 5px"><i class="fas fa-caret-down"></i></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section Gallery End -->
{% endblock %}