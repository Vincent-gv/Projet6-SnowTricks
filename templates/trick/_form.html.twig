{{ form_start(form) }}
<div class="row">
    {{ form_errors(form) }}
</div>
<div id="contact-form">
    <div class="form-row">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="form-group">
                {{ form_widget(form.title, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Trick Name'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12">
            <div class="form-group">
                {{ form_widget(form.category, {'attr': {'class': 'custom-select'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                {{ form_widget(form.content, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Description','rows': '3'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 mt-3">
            <h4 class="font-weight-light"><i class="fab fa-youtube"></i> Add a Video</h4>
        </div>
    </div>
    <div id="add-video" class="row">
        {#        <div class="col-lg-5 col-md-5 col-sm-6">#}
        {#            <select id="group" class="custom-select" name="group">#}
        {#                <option value="">Select Video Plateform</option>#}
        {#                <option value="YouTube">YouTube</option>#}
        {#                <option value="DailyMotion">DailyMotion</option>#}
        {#            </select>#}
        {#        </div>#}
        {#        <div class="col-lg-7 col-md-7 col-sm-6">#}
        <div class="col-lg-12 col-md-12 col-sm-12">
            {% if trick.video %}
                <p>Videos currently attached to this trick:</p>
                <div class="d-flex flex-wrap justify-content-center">
                    {% for video in trick.video %}
                        {% if video.VideoId|length < 9 %}
                            <div class="mb-3 mr-1">
                                <a href="http://www.dailymotion.com/video/{{ video.videoId }}"
                                   class="zoombox carousel-items"></a>
                                <iframe frameborder="0" width="200" height="120"
                                        src="https://www.dailymotion.com/embed/video/{{ video.videoId }}"
                                        allowfullscreen=""></iframe><br>
                                <div class="text-center">
                                <button class="btn-round btn-delete-media text-sm delete-media" onclick=""
                                        type="button"><i class="fas fa-trash"></i>
                                </button>
                                <span class="text-sm label-video-id"><strong>#id:</strong> {{ video.videoId }}</span>
                                </div>
                            </div>
                        {% else %}
                            <div class="mb-3 mr-1">
                                <a href="https://www.youtube.com/watch?v={{ video.videoId }}"
                                   class="zoombox carousel-items"></a>
                                <iframe width="200" height="120"
                                        src="https://www.youtube.com/embed/{{ video.videoId }}"
                                        frameborder="0"
                                        allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe><br>
                                <div class="text-center">
                                <button class="btn-round btn-delete-media text-sm delete-media" onclick=""
                                        type="button"><i class="fas fa-trash"></i>
                                </button>
                                <span class="text-sm label-video-id"><strong>#id:</strong> {{ video.videoId }}</span>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                <p>Add more videos:</p>
            {% endif %}
            {{ form_widget(form.video, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Enter the video ID'}}) }}
        </div>
    </div>
    <div id="add-video-child"></div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-1">
            <button class="btn-round text-sm" onclick="moreVideo()" type="button"><i
                        class="fas fa-plus"></i> Add
                more embed videos
            </button>
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4">
            <h4 class="font-weight-light"><i class="fas fa-images"></i> Add a Picture</h4>
        </div>
    </div>
    <div id="add-picture" class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group-2">
                <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
            </div>
        </div>
    </div>
    <div id="add-picture-child"></div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <button class="btn-round mt-2 text-sm" onclick="morePicture()" type="button"><i
                        class="fas fa-plus"></i> Add
                more pictures
            </button>
            {{ form_widget(form) }}
            {{ form_row(form._token) }}
            <div class="text-center mt-4">
                <button class="btn btn-main" type="submit">{{ button_label|default('Save') }}</button>
            </div>
        </div>
    </div>
<div class="row text-center "><a href="/" class="mt-5"><i class="fas fa-chevron-left"></i> Return to Tricks list</a></div>
</div>
{{ form_end(form) }}