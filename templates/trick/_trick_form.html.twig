{{ form_start(form) }}
<div id="trick-form">
    <div class="form-row">
        {% if form.vars.valid == false %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(form.title) }}
                {{ form_errors(form.content) }}
                {{ form_errors(form.category) }}
                {{ form_errors(form.slug) }}
            </div>
        {% endif %}
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="form-group">
                {{ form_row(form.title, {'label':false, 'attr': {'placeholder': 'Trick Name'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12">
            <div class="form-group">
                {{ form_row(form.category, {'label':false, 'attr': {'class': 'custom-select'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <label for="slug"><small>Slug</small></label><input class="w-100" type="text" id="slug" placeholder="{% if trick.slug %}{{ trick.slug }}{% endif %}" disabled>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                {{ form_widget(form.content, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Description','rows': '3'}}) }}
            </div>
        </div>
    </div>
    <div id="add-video" class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h4 class="font-weight-light mt-1"><i class="fab fa-youtube"></i> Videos</h4>
            {% if trick.videos %}
                <div class="d-flex flex-wrap mt-2">
                    {% for video in trick.videos %}
                        {% if video.VideoId|length < 9 %}
                            <div class="mb-3 mr-1">
                                <a href="http://www.dailymotion.com/video/{{ video.videoId }}"
                                   class="zoombox carousel-items"></a>
                                <iframe frameborder="0" width="200" height="120"
                                        src="https://www.dailymotion.com/embed/video/{{ video.videoId }}"
                                        allowfullscreen=""></iframe>
                                <br>
                                <div class="text-center">
                                    <button class="btn-round btn-delete-media text-sm delete-media" onclick=""
                                            type="button"><i class="fas fa-trash"></i>
                                    </button>
                                    <span class="text-sm label-video-id"><strong>DailyMotion</strong> {{ video.videoId }}</span>
                                </div>
                            </div>
                        {% else %}
                            <div class="mb-3 mr-1">
                                <a href="https://www.youtube.com/watch?v={{ video.videoId }}"
                                   class="zoombox carousel-items"></a>
                                <iframe width="200" height="120"
                                        src="https://www.youtube.com/embed/{{ video.videoId }}"
                                        frameborder="0"
                                        allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                                <br>
                                <div class="text-center">
                                    <button class="btn-round btn-delete-media text-sm delete-media" onclick=""
                                            type="button"><i class="fas fa-trash"></i>
                                    </button>
                                    <span class="text-sm label-video-id"><strong>Youtube</strong> {{ video.videoId }}</span>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            {{ form_widget(form.videos) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4">
            <h4 class="font-weight-light"><i class="fas fa-images"></i> Pictures</h4>
        </div>
    </div>
    <div id="add-picture" class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group-2">
                {{ form_row(form.images) }}
            </div>
        </div>
    </div>
    <div class="form-row">
        {{ form_row(form._token) }}
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4 text-center">
            <button class="btn btn-main" type="submit">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</div>
<div class="row text-center "><a href="/" class="mt-5"><i class="fas fa-chevron-left"></i> Return to Tricks list</a>
</div>
</div>
{{ form_end(form) }}
