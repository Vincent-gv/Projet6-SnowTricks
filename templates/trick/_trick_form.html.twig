{{ form_start(form) }}
<div id="trick-form">
    {% if form.vars.valid == false %}
        <div class="alert alert-danger" role="alert">
            {{ form_errors(form.title) }}
            {{ form_errors(form.category) }}
            {{ form_errors(form.content) }}
            {{ form_errors(form.videos) }}
            {{ form_errors(form.images) }}
        </div>
    {% endif %}
    <div class="form-row align-items-end">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="form-group">
                {{ form_row(form.title, {'label':false, 'attr': {'placeholder': 'Trick Name'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12">
            <div class="form-group">
                {{ form_row(form.category, {'label':false, 'attr': {'class': 'custom-select'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <span class="text-sm label-video-id"><strong>Generated slug:</strong></span>
                {{ form_row(form.slug, {'label':false, 'attr': {'placeholder': 'Trick slug'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                {{ form_widget(form.content, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Description','rows': '3'}}) }}
            </div>
        </div>
    </div>
    <div id="add-video" class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h4 class="font-weight-light mt-3"><i class="fab fa-youtube"></i> Videos</h4>
            {% if trick.videos %}
                <div class="d-flex flex-wrap mt-3">
                    {% for video in trick.videos %}
                        {% if video.PlatformName == 'youtube' %}
                            <div class="mb-3 mr-1">
                                <iframe width="202" height="120"
                                        src="https://www.youtube.com/embed/{{ video.PlatformId }}"
                                        allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                        allowfullscreen></iframe>
                                <br>
                                <div class="text-center">
                                    <span class="text-sm label-video-id"><strong>YouTube:</strong> {{ video.PlatformId }}</span>
                                </div>
                            </div>
                        {% elseif video.PlatformName == 'dailymotion' %}
                            <div class="mb-3 mr-1">
                                <iframe width="202" height="120"
                                        src="https://www.dailymotion.com/embed/video/{{ video.PlatformId }}"
                                        allowfullscreen></iframe>
                                <br>
                                <div class="text-center">
                                    <span class="text-sm label-video-id"><strong>DailyMotion:</strong> {{ video.PlatformId }}</span>
                                </div>
                            </div>
                        {% elseif video.PlatformName == 'vimeo' %}
                            <div class="mb-3 mr-1">
                                <iframe src="https://player.vimeo.com/video/{{ video.PlatformId }}" width="202" height="120" frameborder="0" allow="autoplay; fullscreen" allowfullscreen style="background-color: #1a1a1a;"></iframe>
                                <br>
                                <div class="text-center">
                                    <span class="text-sm label-video-id"><strong>Vimeo:</strong> {{ video.PlatformId }}</span>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}
            {{ form_row(form.videos) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4">
            <h4 class="font-weight-light"><i class="fas fa-images"></i> Pictures</h4>
        </div>
    </div>
    <div id="add-picture" class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group-2">
                {{ form_row(form.images) }}
            </div>
        </div>
    </div>
    <div class="form-row">
        {{ form_row(form._token) }}
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4 text-center">
            <button class="btn btn-main" type="submit">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</div>
<div class="row text-center "><a href="/" class="mt-5"><i class="fas fa-chevron-left"></i> Return to Tricks list</a>
</div>
</div>
{{ form_end(form) }}
