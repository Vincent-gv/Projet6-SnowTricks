{{ form_start(form) }}
<div id="trick-form">
    <div class="form-row align-items-end">
        <div class="col-lg-9 col-md-9 col-sm-12">
            <div class="form-group">
                {{ form_row(form.title, {'label':false, 'attr': {'placeholder': 'Trick Name'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-12">
            <div class="form-group">
                {{ form_row(form.category, {'label':false, 'attr': {'class': 'custom-select'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                <span class="text-sm label-video-id"><strong>Generated slug:</strong></span>
                {{ form_row(form.slug, {'label':false, 'attr': {'placeholder': 'Trick slug'}}) }}
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group">
                {{ form_widget(form.content, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Description','rows': '3'}}) }}
            </div>
        </div>
    </div>
    <div id="add-video" class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h4 class="font-weight-light mt-3"><i class="fab fa-youtube"></i> Videos</h4>
            {{ form_row(form.videos) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4">
            <h4 class="font-weight-light"><i class="fas fa-images"></i> Pictures</h4>
        </div>
    </div>
    <div id="add-picture" class="form-row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="form-group-2">
                {{ form_row(form.images) }}
            </div>
        </div>
    </div>
    <div class="form-row">
        {{ form_row(form._token) }}
        <div class="col-lg-12 col-md-12 col-sm-12 mt-4 text-center">
            <button class="btn btn-main" type="submit">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</div>
<div class="row text-center "><a href="/" class="mt-5"><i class="fas fa-chevron-left"></i> Return to Tricks list</a>
</div>
</div>
{{ form_end(form) }}
