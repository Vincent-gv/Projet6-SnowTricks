{{ form_start(form) }}
<form action="#" class="text-left">
    <div class="form-group text-center">
        {{ form_errors(form.comment) }}
        {{ form_row(form.comment, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Your Comment','rows': '4'}}) }}

        {{ form_row(form._token) }}
        <div class="text-center mt-4">
            <button class="btn btn-main" type="submit">{{ button_label|default('Add Comment') }}</button>
        </div>
    </div>
</form>
{{ form_end(form) }}