{% if pagination.nbPages > 0 %}
    <nav>
        <ul class="pagination">
            <li class="page-item {% if pagination.page == 1 %} d-none {% endif %}">
                <a class="page-link" href="?page={{ pagination.page-1 }}"
                   tabindex="-1">Previous</a>
            </li>
            {% for p in range(max(pagination.page-4, 1), min(pagination.page+4, pagination.nbPages)) %}
                <li class="page-item {% if p == pagination.page %}active{% endif %}">
                    <a class="page-link" href="{{ path(pagination.routeName, { 'page': p }) }}">
                        {{ p }} <span class="sr-only">(current)</span>
                    </a>
                </li>
            {% endfor %}
            <li class="page-item {% if pagination.page == pagination.nbPages %}  d-none {% endif %}">
                <a class="page-link"
                   href="?page={{ pagination.page+1 }}">Next</a>
            </li>
        </ul>
    </nav>
{% endif %}