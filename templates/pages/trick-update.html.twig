{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Update post{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading bg-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">Snowboard tricks</span>
                    <h1 class="text-uppercase text-white mb-5">Update your
                        <span class="text-color">snowtrick</span>
                    </h1>
                    <h4 class="text-white"><i class="far fa-edit"></i> Please modify the form below</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Publish section Start -->
    <section class="contact-form section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="section-title">
                        <div class="divider mb-3"></div>
                        <h2>Update</h2>
                        <p class="mt-3">Share SnowTricks photos and videos with the community</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center pb-5">
                <div class="col-lg-9">
                    <form id="contact-form" novalidate="novalidate">
                        <div class="form-row">
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <div class="form-group">
                                    <input name="name" type="text" class="form-control" placeholder="Trick name">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12">
                                <div class="form-group">
                                    <select id="group" class="custom-select" name="group">
                                        <option value="">Choose a category</option>
                                        <option value="1">Category 1</option>
                                        <option value="2">Category 2</option>
                                        <option value="3">Category 3</option>
                                        <option value="3">Category 4</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <textarea name="description" class="form-control" rows="3"
                                              placeholder="Description"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    <h4 class="font-weight-light"><i class="fab fa-youtube"></i> Share videos</h4>
                                    <div class="form-group">
                                        <input name="video-url" type="text" class="form-control" placeholder="Enter the video URL from the videos website (YouTube, Dailymotion...)">
                                    </div>
                                    <textarea name="video" class="form-control" rows="3"
                                              placeholder="Paste the entire EMBED code"></textarea>
                                    <button class="btn-round mt-2 text-sm" type="submit"><i class="fas fa-plus"></i> Add
                                        more embed videos
                                    </button>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 mt-2">
                                <h4 class="font-weight-light"><i class="fas fa-images"></i> Upload pictures</h4>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group-2">
                                    <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                                    <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                    <button class="btn-round mt-2 text-sm" type="submit"><i class="fas fa-plus"></i> Add
                                        more pictures
                                    </button>
                                </div>
                                <div class="text-center">
                                    <button class="btn btn-main mt-3" type="submit">Publish</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Publish section End -->
{% endblock %}