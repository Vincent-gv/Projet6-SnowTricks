{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} -Contact{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading bg-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">Send  email</span>
                    <h1 class="text-uppercase text-white mb-5">Contact us
                        <span class="text-color">@snowtrick</span>
                    </h1>
                    <h4 class="text-white"><i class="far fa-envelope"></i> Please fill this form to contact us</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Contact section Start -->
    <section class="contact-form section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="section-title">
                        <div class="divider mb-3"></div>
                        <h2>Contact us</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center pb-5">
                <div class="col-lg-9 text-center">
                    <form id="contact-form" novalidate="novalidate">
                        <div class="form-row">
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <input name="user_name" type="text" class="form-control" placeholder="Your Name">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12">
                                <div class="form-group">
                                    <input name="user_email" type="text" class="form-control"
                                           placeholder="Email Address">
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group-2">
                                    <textarea name="user_message" class="form-control" rows="8"
                                              placeholder="Your Message"></textarea>
                                </div>

                                <div class="text-center">
                                    <button class="btn btn-main mt-3 " type="submit">Send message</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact section End -->
{% endblock %}