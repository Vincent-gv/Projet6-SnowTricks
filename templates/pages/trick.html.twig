{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} -Post{% endblock %}

{% block stylesheets %}{{ parent() }}
    <!-- zoombox.css -->
    <link rel="stylesheet" href="css/zoombox.css">
{% endblock %}

{% block body %}
<body id="trick">
{% endblock %}

{% block content %}
<!-- Page Top section Start -->
{% if trick.image is defined %}
{% for image in trick.image %}
{% if loop.first %}
<section class="heading"
         style="background: url({{ asset('images/gallery/' ~ image.filename) }}) no-repeat 0 30%;background-size: cover;">
    {% endif %}
    {% endfor %}
    {% else %}
    <section class="heading">
        {% endif %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">{{ trick.category.name }}</span>
                    <h1 class="text-uppercase text-white mb-5">{{ trick.title }}
                    </h1>
                    <h4 class="text-white"><i class="far fa-edit"></i> Publish
                        on {{ trick.createdAt | date('(l), F j Y') }}</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Carousel section Start -->
    <section class="slider">
        <div id="thumbnail-slider" class="mt-5">
            <div class="inner">
                <ul>
                    {% if trick.video %}
                        {% for video in trick.video %}
                            {% if video.plateform == 'YouTube' %}
                                <li>
                                    <a href="https://www.youtube.com/watch?v={{ video.videoId }}"
                                       class="zoombox carousel-items"></a>
                                    <iframe width="320" height="220"
                                            src="https://www.youtube.com/embed/{{ video.videoId }}"
                                            frameborder="0"
                                            allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
                                            allowfullscreen></iframe>
                                    <p class="btn-edit edit-flex mb-2">
                                        <a href="#" title="delete"><i class="far fa-trash-alt "></i></a>
                                    </p>
                                </li>
                            {% elseif video.plateform == 'DailyMotion' %}
                                <li>
                                    <a href="http://www.dailymotion.com/video/{{ video.videoId }}"
                                       class="zoombox carousel-items"></a>
                                    <iframe frameborder="0" width="320" height="220"
                                            src="https://www.dailymotion.com/embed/video/{{ video.videoId }}"
                                            allowfullscreen=""></iframe>
                                    <p class="btn-edit edit-flex mb-2">
                                        <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                                    </p>
                                </li>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    {% if trick.image %}
                        {% for image in trick.image %}
                            <li>
                                <a href="{{ asset('images/gallery/' ~ image.filename) }}"
                                   onclick="$.zoombox.options.theme = 'simple';"
                                   class="zoombox thumb"></a>
                                <p class="btn-edit edit-flex mb-2">
                                    <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                                </p>
                            </li>
                        {% endfor %}
                    {% endif %}
                </ul>
            </div>
        </div>
    </section>
    <!-- Carousel section End -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12">
                <div class="row">
                    <div class="col-lg-12 text-sd">
                        <div class="mx-4">
                            <p>{{ trick.content | nl2br }}</p>
                        </div>
                        <div id="anchor" class="border-top border-bottom py-4 text-center link-black m-5">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item"><i class="far fa-calendar-plus"></i> Posted
                                    on {{ trick.createdAt | date('j F Y, g:i a') }}</li>
                                <li class="list-inline-item"><i class="far fa-calendar-alt"></i> Modified
                                    on {{ trick.updatedAt | date('j F Y, g:i a') }}</li>
                                <li class="list-inline-item text-capitalize"><i
                                            class="fas fa-user"></i> {{ trick.user.name }}</li>
                                <li class="list-inline-item"><i class="fas fa-tag"></i> {{ trick.category.name }}</li>
                            </ul>
                        </div>
                        <div class="py-4 text-center comments">
                            <div class="divider mb-3"></div>
                            <h4 class="mb-2 font-secondary text-uppercase font-weight-normal">Leave a comment</h4>
                            <form action="#" class="text-left">
                                <div class="form-group text-center">
                                    <textarea name="msg" id="msg" cols="30" rows="6" class="form-control"
                                              placeholder="Your Comment"></textarea>
                                    <a href="#" class="btn btn-main mt-4">Add Comment</a>
                                </div>
                            </form>
                        </div>
                        <div class="mt-2 border-top mb-5 pb-4">
                            <h4 class="font-secondary text-uppercase font-weight-normal pt-4">Comments</h4>
                            {% if trick.comment %}
                                {% for comment in trick.comment %}
                                    <div class="media mt-3 mb-5">
                                        <img src="images/avatars/{{ comment.user.image }}" class="mr-4 img-fluid avatar"
                                             alt="{{ comment.user.name }}">
                                        <div class="media-body">
                                            <h4 class="mt-0 mb-0 text-capitalize">{{ comment.user.name }}</h4>
                                            <span>{{ comment.createdAt | date('j F Y, g:i a') }}</span>
                                            <p class="mt-2">{{ comment.comment | nl2br }}</p>
                                            <span><a href="#anchor" class="btn reply-btn">Reply</a></span>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="mt-2">No comments yet</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

    {% block javascripts %}
        <script src="js/zoombox.js"></script>
        <script src="js/carousel.js"></script>
    {% endblock %}