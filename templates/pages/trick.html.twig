{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} -Post{% endblock %}

{% block stylesheets %}{{ parent() }}
    <!-- zoombox.css -->
    <link rel="stylesheet" href="css/zoombox.css">
{% endblock %}

{% block body %}
<body style="font-size: 0;">
{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">Snowboard tricks</span>
                    <h1 class="text-uppercase text-white mb-5">{{ trick.title }}
                    </h1>
                    <h4 class="text-white"><i class="far fa-edit"></i> Publish on {{ trick.createdAt | date('(l), F j Y') }}</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Carousel section Start -->
    <section class="slider">
        <div id="thumbnail-slider" class="mt-5">
            <div class="inner">
                <ul>
                    <li>
                        <a href="images/gallery/snowboard-01.jpg" onclick="$.zoombox.options.theme = 'simple';"
                           class="zoombox thumb"></a>
                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="https://www.youtube.com/watch?v=qsd8uaex-Is" class="zoombox carousel-items"></a>
                        <iframe width="320" height="220" src="https://www.youtube.com/embed/qsd8uaex-Is"
                                frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>

                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="images/gallery/snowboard-03.jpg" onclick="$.zoombox.options.theme = 'simple';"
                           class="zoombox thumb"></a>
                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="http://www.dailymotion.com/video/x63itee" class="zoombox carousel-items"></a>
                        <iframe frameborder="0" width="640" height="360" src="https://www.dailymotion.com/embed/video/x63itee" allowfullscreen="" allow="autoplay"></iframe>
                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="images/gallery/snowboard-05.jpg" onclick="$.zoombox.options.theme = 'simple';"
                           class="zoombox thumb"></a>
                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="https://www.youtube.com/watch?v=aRyFCCq63ms" class="zoombox carousel-items"></a>
                        <iframe width="186.21" height="120" src="https://www.youtube.com/embed/aRyFCCq63ms"
                                frameborder="0"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>

                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="images/gallery/snowboard-07.jpg" onclick="$.zoombox.options.theme = 'simple';"
                           class="zoombox thumb"></a>
                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                    <li>
                        <a href="images/gallery/snowboard-08.jpg" onclick="$.zoombox.options.theme = 'simple';"
                           class="zoombox thumb"></a>
                        <p class="btn-edit edit-flex mb-2">
                            <a href="#" title="delete"><i class="far fa-trash-alt"></i></a>
                            <a href="#" title="edit"><i class="far fa-edit"></i></a>
                        </p>
                    </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- Carousel section End -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12">
                <div class="row">
                    <div class="col-lg-12 text-sd">
                        <div class="mx-4">
                            <p>{{ trick.content | nl2br }}</p>
                        </div>
                        <div id="anchor" class="border-top border-bottom py-4 text-center link-black m-5">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item"><a href="#"><i class="far fa-calendar-plus"></i> Posted on {{ trick.createdAt | date('m/d/y, g:i a') }}</a></li>
                                <li class="list-inline-item"><a href="#"><i class="far fa-calendar-alt"></i> Modified on {{ trick.updatedAt | date('m/d/y, g:i a') }}</a></li>
                                <li class="list-inline-item"><a href="#"><i class="fas fa-user"></i> {{ trick.userId }}</a></li>
                                <li class="list-inline-item"><a href="#"><i class="fas fa-tag"></i> {{ trick.categoryId }}</a></li>
                            </ul>
                        </div>
                        {% include 'pages/_comments.html.twig' with { 'comments':comments } only %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <!--  Zoombox Overlay-->
    <script src="js/zoombox.js"></script>
    <!--  Carousel-->
    <script src="js/carousel.js"></script>
{% endblock %}
