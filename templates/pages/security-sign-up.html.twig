{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} -Sign Up{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading bg-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">Snowboard tricks</span>
                    <h1 class="text-uppercase text-white mb-5">Sign up
                        <span class="text-color">snowtrick</span>
                    </h1>
                    <h4 class="text-white"><i class="fas fa-sign-in-alt"></i> Sign Up to publish or modify tricks
                    </h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Sign Up section Start -->
    {{ form_start(form) }}
    <section class="contact-form section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="mb-4">
                        <div class="divider mb-3"></div>
                        <h2>Sign up</h2>
                        <p class="mt-3">Already have a SnowTricks account? <a href="{{ path('sign-in') }}">Sign in</a></p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center pb-5">
                <div class="col-lg-4 text-center">
                    <form id="contact-form">
                        <div class="form-row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    {% if form_errors(form.name) %}
                                        <div class="errors">
                                            {{ form_errors(form.name) }}
                                        </div>
                                    {% endif  %}
                                    {{ form_widget(form.name, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Name',
                                        'oninvalid' : "setCustomValidity('Name must contain at least 3 characters'
                                        )"}}) }}
                                </div>
                                <div class="form-group">
                                    {% if form_errors(form.email) %}
                                        <div class="errors">
                                            {{ form_errors(form.email) }}
                                        </div>
                                    {% endif  %}
                                    {{ form_widget(form.email, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
                                </div>
                                <div class="form-group">
                                    {% if form_errors(form.password.first) %}
                                        <div class="errors">
                                            {{ form_errors(form.password.first) }}
                                        </div>
                                    {% endif  %}
                                    {{ form_widget(form.password.first, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Password'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.password.second, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Confirm password'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.image, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Profil picture'}}) }}
                                </div>
                                {{ form_row(form._token) }}
                                <button class="btn btn-main mt-3 " type="submit">Register</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
    <!-- Sign Up section  End -->
{% endblock %}