{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} -Publish{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading bg-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">Snowboard tricks</span>
                    <h1 class="text-uppercase text-white mb-5">Publish your
                        <span class="text-color">snowtrick</span>
                    </h1>
                    <h4 class="text-white"><i class="far fa-edit"></i> Please fill the form below to publish new trick</h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Publish section Start -->
    <section class="contact-form section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="section-title">
                        <div class="divider mb-3"></div>
                        <h2>Add a new trick</h2>
                        <p class="mt-3">Share SnowTricks photos and videos with the community</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center pb-5">
                <div class="col-lg-9">
                    {{ form_start(form) }}
                    <div class="row">
                        {{ form_errors(form) }}
                    </div>
                    <div id="contact-form">
                        <div class="form-row">
                            <div class="col-lg-9 col-md-9 col-sm-12">
                                <div class="form-group">
                                    {{ form_widget(form.title, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Trick Name'}}) }}
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12">
                                <div class="form-group">
{#                                    {{ form_widget(form.category) }}#}
                                    <select id="group" class="custom-select" name="group">
                                        <option value="">Choose a category</option>
                                        <option value="Regular">Regular</option>
                                        <option value="Goofy">Goofy</option>
                                        <option value="Switch-stance">Switch-stance</option>
                                        <option value="Fakie">Fakie</option>
                                        <option value="Frontside">Frontside</option>
                                        <option value="Backside">Backside</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    {{ form_widget(form.content, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Description','rows': '3'}}) }}
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 mt-3">
                                <h4 class="font-weight-light"><i class="fab fa-youtube"></i> Add a Video Trick</h4>
                            </div>
                        </div>
                        <div id="add-video" class="row">
                            <div class="col-lg-5 col-md-5 col-sm-6">
                                <select id="group" class="custom-select" name="group">
                                    <option value="">Select Video Plateform</option>
                                    <option value="YouTube">YouTube</option>
                                    <option value="DailyMotion">DailyMotion</option>
                                </select>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-6">
                                <input name="video-url" type="text" class="form-control"
                                       placeholder="Enter the video ID">
                            </div>
                        </div>
                        <div id="add-video-child"></div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 mt-1">
                                <button class="btn-round text-sm" onclick="moreVideo()" type="button"><i
                                            class="fas fa-plus"></i> Add
                                    more embed videos
                                </button>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-12 col-md-12 col-sm-12 mt-4">
                                <h4 class="font-weight-light"><i class="fas fa-images"></i> Add a Picture Trick</h4>
                            </div>
                        </div>

                        <div id="add-picture" class="form-row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group-2">
                                    <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                                    <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                                </div>
                            </div>
                        </div>
                        <div id="add-picture-child"></div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <button class="btn-round mt-2 text-sm" onclick="morePicture()" type="button"><i
                                            class="fas fa-plus"></i> Add
                                    more pictures
                                </button>
                                {{ form_widget(form) }}
                                <div class="text-center mt-4">
                                    <button class="btn btn-main" type="submit">Publish</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <!-- Publish section End -->
{% endblock %}
{% block javascripts %}
    <script src="js/clone.js"></script>
{% endblock %}