{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} -Reset password{% endblock %}

{% block content %}
    <!-- Page Top section Start -->
    <section class="heading bg-page">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <span class="h3 d-inline-block mb-4 subhead text-uppercase">Snowboard tricks</span>
                    <h1 class="text-uppercase text-white mb-5">Reset password
                        <span class="text-color">/ snowtrick</span>
                    </h1>
                    <h4 class="text-white"><i class="fas fa-sign-in-alt"></i> Reset your account password
                    </h4>
                </div>
            </div>
        </div>
    </section>
    <!-- Page Top section End -->
    <!-- Sign Up section Start -->
    {{ form_start(form) }}
    <section class="sign-form section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <div class="mb-4">
                        <div class="divider mb-3"></div>
                        <h2>Reset password</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center pb-5">
                <div class="col-lg-4 text-center">
                    <form id="contact-form">
                        <div class="form-row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="form-group">
                                    {% if form_errors(form.password.first) %}
                                        <div class="errors">
                                            {{ form_errors(form.password.first) }}
                                        </div>
                                    {% endif  %}
                                    {{ form_row(form.password.first, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Password'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.password.second, {'label':false, 'attr': {'class': 'form-control','placeholder': 'Confirm password'}}) }}
                                </div>
                                {{ form_row(form._token) }}
                                <button class="btn btn-main mt-3 " type="submit">Change my password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
    <!-- Sign Up section  End -->
{% endblock %}