<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}SnowTricks{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ absolute_url(asset('css/bootstrap.min.css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('css/style.css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('css/font-awesome.css')) }}">
    {% endblock %}
</head>
{% block body %}
<body>
{% endblock %}
<!-- Section Menu Start -->
<nav class="navbar navbar-expand-lg navigation fixed-top" id="navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <h2 class="navbar-logo text-white text-capitalize">
                <i class="fas fa-snowboarding"></i> Snow<span class="text-color">Tricks</span>
            </h2>
        </a>
        <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-chevron-circle-up"></i></button>
        <nav role="navigation" id="navToggle">
            <div id="menuToggle" class="hidden-md-up">
                <label>
                    <input type="checkbox"/>
                </label>
                <span></span>
                <span></span>
                <span></span>
                <ul id="menu">
                    <li><a href="/" class="text-white">Home</a></li>
                    <li><a href="{{ path('trick_new') }}" class="text-white">Publish</a></li>
                    <li><a href="{{ path('contact') }}" class="text-white">Contact</a></li>
                    {% if app.user %}
                        <li><i class="fas fa-user"></i> Welcome {{ app.user.username }} !</li>
                        <li><a href="{{ path('app_logout') }}" class="text-color">Log out <i class="fas fa-sign-out-alt"></i>
                            </a></li>
                    {% else %}
                        <li><a href="{{ path('sign-up') }}" class="text-color">Sign up</a></li>
                        <li><a href="{{ path('sign-in') }}" class="text-color">Sign in</a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
        <div class="collapse text-center navbar-collapse" id="navbarsid">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('trick_new') }}">Publish</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('contact') }}">Contact</a></li>
            </ul>
            <div class="my-md-0 ml-lg-4 mt-4 mt-lg-0 ml-auto text-lg-right mb-3 mb-lg-0">
                <ul class="navbar-nav mx-auto">

                    {% if app.user %}
                        <li class="text-white text-capitalize"><i class="fas fa-user"></i> Welcome {{ app.user.username }} !</li>
                        <li><a href="{{ path('app_logout') }}" class="text-color"> <i class="fas fa-sign-out-alt"></i></a></li>
                    {% else %}
                        <li><a href="{{ path('sign-up') }}" class="text-color">Sign up</a></li>
                        <li><a href="{{ path('sign-in') }}" class="text-color">Sign in</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</nav>
<!-- Section Menu End -->
<div class="main-wrapper ">
    {% block content %}
    {% endblock %}
    <!-- Section Footer Start -->
    <footer class="footer bg-black-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-5 mb-lg-0">
                    <h2 class="text-white mb-4"><i class="fas fa-snowboarding"></i> SnowTricks</h2>

                    <p>Snowboarding Community to share Tricks.</p>
                    <p>Every SnowTricks can be modify or comment if you subscribe.</p>
                </div>
                <div class="col-lg-3 col-md-6 mb-5 mb-lg-0">
                    <div class="footer-widget recent-blog">
